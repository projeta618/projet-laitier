<?xml version='1.0' encoding='utf-8'?>
<widget id="com.les_fermes_laitieres.www" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Les fermes laitieres 54</name>
    <description></description>
    <author email="projeta618@gmail.com" href="http://cordova.io">
        David Silviera dos santos beaulan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="www/img/logo.png" />
    <preference name="prerendered-icon" value="false" />
</widget>
